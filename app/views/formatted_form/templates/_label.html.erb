<% unless ['', false].include?(options[:label]) %>
  <% prepend_required_mark = FormattedForm.prepend_required_mark(options) %>
  <% if prepend_required_mark.required? %>
    <%= options[:builder].label(options[:method], :class => 'control-label') do %>
      <%= content_tag(prepend_required_mark.tag, 
                      prepend_required_mark.text, 
                      class: prepend_required_mark.css_class) %>
      <%= options[:label] || options[:method].to_s.humanize %>
    <% end %>
  <% else %>
    <%= options[:builder].label(options[:method], options[:label], :class => 'control-label') %>
  <% end %>
<% end %>
